{
  "manifest_version": 3,
  "name": "PoE Currency Tracker",
  "version": "0.1",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.pathofexile.com/trade2/history*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "div_16.png",
    "32": "div_32.png",
    "48": "div_48.png",
    "128": "div_128.png"
  }
}
